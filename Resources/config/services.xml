<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="elcweb.listener.log.class">Elcweb\EventStoreBundle\EventListener\Log</parameter>
        <parameter key="elcweb.listener.store.class">Elcweb\EventStoreBundle\EventListener\Store</parameter>
    </parameters>

    <services>
        <service id="elcweb.listener.log" class="%elcweb.listener.log.class%">
            <argument type="service" id="logger"/>
            <argument type="service" id="serializer" />
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <argument type="service" id="security.context"/>
            <tag name="monolog.logger" channel="elcweb" />
            <tag name="kernel.event_listener" event="elcweb.#" method="onEvent" />
        </service>

        <service id="elcweb.listener.store" class="%elcweb.listener.store.class%">
            <argument type="service" id="logger" />
            <argument type="service" id="serializer" />
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="security.context"/>
            <tag name="monolog.logger" channel="elcweb" />
            <tag name="kernel.event_listener" event="elcweb.#" method="onEvent" />
        </service>
    </services>

</container>
